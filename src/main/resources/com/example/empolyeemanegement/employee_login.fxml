    <Button layoutX="251.0" layoutY="303.0" mnemonicParsing="false" onAction="#handleLoginButtonAction"
            text="Employee Login"/>
    <Label layoutX="231.0" layoutY="134.0" text="Please Enter your Name"/>
    <Label layoutX="229.0" layoutY="227.0" text="Please enter your Password"/>
    <Button layoutX="467.0" layoutY="438.0" mnemonicParsing="false" onAction="#handleAdminLoginButtonAction"
            text="Admin Login"/>
    <Label layoutX="193.0" layoutY="62.0" text="Employee Login">
        <font>
            <Font name="System Bold" size="32.0"/>
        </font>
    </Label>
</AnchorPane>
